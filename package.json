{
	"name": "fastify-ts-app",
	"version": "1.0.0",
	"type": "module",
	"description": "Fastify app boilerplate setup with Zod schema validation",
	"repository": "https://github.com/rohitreddygr8/fastify-ts-app.git",
	"author": "rohitreddygr8",
	"license": "GPL-3.0-only",
	"scripts": {
		"dev": "tsx watch ./src/server.ts",
		"build": "tsc",
		"start": "tsx ./dist/server.js",
		"start:prod": "cross-env NODE_ENV=production tsx ./dist/server.js",
		"lint": "eslint ./",
		"lint:fix": "eslint ./ --fix",
		"commit": "git add ./ && git cz",
		"postinstall": "husky install"
	},
	"config": {
		"commitizen": {
			"path": "git-cz"
		}
	},
	"dependencies": {
		"@fastify/etag": "^4.2.0",
		"@fastify/helmet": "^10.1.1",
		"@fastify/rate-limit": "^8.0.0",
		"@fastify/static": "^6.10.1",
		"chalk": "^5.2.0",
		"dotenv": "^16.0.3",
		"fastify": "^4.17.0",
		"http-status": "^1.6.2",
		"pino-pretty": "^10.0.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@types/node": "^20.2.1",
		"@types/passport-jwt": "^3.0.8",
		"@typescript-eslint/eslint-plugin": "^5.59.6",
		"@typescript-eslint/parser": "^5.59.6",
		"cross-env": "^7.0.3",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"git-cz": "^4.9.0",
		"husky": "^8.0.3",
		"prettier": "^2.8.8",
		"tsx": "^3.12.7",
		"typescript": "^5.0.4"
	}
}
